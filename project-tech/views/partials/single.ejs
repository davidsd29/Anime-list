<section class="col-12 col-md-10">

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="<%= anime.tumbnail %>" alt="">
            <p>Genres: <%= anime.categories %> </p>
        </div>
        <div class="col-12 col-md-8">
            <h2>Info:</h2>
            <h4><%= anime.name %></h4>
            <p><%= anime.storyline %></p>
            <button>Add to list</button>
        </div>
    </div>

    <!-- count until value animes.episode -->
    <h3>Episode List</h3>
    <p><%= anime.name %> Episode Subbed</p>
</section>