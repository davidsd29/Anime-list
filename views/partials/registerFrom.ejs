  <div class="row">
    <form action="/register" method="POST" id="register">

      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>

      <section class="row">
        <div class="col-12 col-md-6">
          <section>

             <fieldset>
              <label for="profile_photo">Profile Photo</label>
              <div>
                <img src="/img/default-user.jpg" id="profileImage" alt="default profile img">
                <input id="imageUpload" type="file" name="profile_photo" placeholder="Photo" capture>
              </div>
            </fieldset>
            
            <fieldset class="required">
              <label for="name">Name</label>
              <input type="text" placeholder="Enter your name" name="name" id="name" >
            </fieldset>

            <fieldset class="required">
              <label for="email">Email</label>
              <input type="email" placeholder="Enter Email" name="email" id="email" >
            </fieldset>

            <fieldset>
              <label for="description">Description about your anime</label>
              <textarea id="description" name="description" rows="4" cols="50"></textarea>
            </fieldset>

          </section>
        </div>

        <div class="col-12 col-md-6">
          <section>

            <fieldset class="required">
              <label for="username">Username</label>
              <input type="text" placeholder="Enter your username" name="username" id="username" >
            </fieldset>

            <fieldset class="required">
              <label for="psw">Password</label>
              <input type="password" placeholder="Enter Password" name="psw" id="psw" >
            </fieldset>

            <fieldset class="required">
              <label for="psw-repeat">Repeat Password</label>
              <input type="password" placeholder="Repeat Password" name="psw-repeat" id="psw-repeat" >
            </fieldset>
            <hr>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

            <input type="submit" class="btn" id="submit" value="Compleet">
          </section>
        </div>
      </section>

      <section class="sign-In">
        <p>Already have an account? <button onclick="openLogin()">Sign in.</button></p>
      </section>
    </form>
  </div>